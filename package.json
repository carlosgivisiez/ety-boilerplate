        "tsyringe": "^4.1.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@overnightjs/core": "^1.6.15",
        "@types/compression": "^1.7.0",
        "@types/express": "^4.17.3",
        "@types/hapi__joi": "^16.0.12",
        "@types/jest": "^25.1.4",
        "@types/morgan": "^1.9.0",
        "@types/node": "^13.9.1",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "dotenv": "^8.2.0",
        "eslint": "^6.8.0",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "nodemon": "^2.0.2",
